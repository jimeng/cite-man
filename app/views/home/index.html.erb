<div>
	<span id="new_source">
		<%= link_to 'New Citations Source',  new_person_source_path(@person) %>
	</span>
	<span id="preferences">
		<%= link_to 'Preferences',  edit_person_path(@person) %>
	</span>
	<% if @is_admin %>
		<span>
			<%= link_to 'Config', config_values_path %>
		</span>
	<% end %>
	<span id='show_clipboard'>
		<%= link_to 'Show Clipboard', person_clipboard_items_path(@person) %>
	</span>
</div>

<h1>Citations Manager</h1>
<div id="messages" style="display:none;"></div>
<table width="100%">
	<tr>
		<th id="sources_head" width="33%" align="left">
			<h2>Sources</h2>
		</th>
		<th id="items_head" width="66%" align="left">
			<h2>Citations</h2>
		</th>
	</tr>

	<tr>
		<td headers="sources_head" id="sources_list" valign="top" style="margin:0em 2em 0em 2em;">
			<!-- rendering _sources.html.erb -->
			<%= render 'sources' %>
		</td>
		<td headers="items_head" valign="top" style="margin:0em 2em 0em 2em;">
			<ul>
			  <li class="cite_action">
			    <%= link_to 'Copy', person_clipboard_items_path(@person) %>
			  </li>
			</ul>
			<div id="items_list">
			</div>
		</td>
	</tr>
</table>

<div id="dialog">
</div>
<div id="clipboard">
</div>

<div style="display:none;">
	<p>
		<%= @person %>
	</p>
	<p>
		<%= @person.id %>
		(@person.id)
	</p>
	<p>
		<%= @person.full_name %>
		(@person.full_name)
	</p>
	<p>
		<%= @person.given_name %>
		(@person.given_name)
	</p>
	<p>
		<%= @person.family_name %>
		(@person.family_name)
	</p>
</div>
<div id="clipboard_form" style="display:none;">
	<%= form_for @clipboard_item, :url =>  person_clipboard_items_path(@person) do |f| %>
	   <div class="field">
	    <%= f.label :citation %><br />
	    <%= f.text_area :citation %>
	  </div>
	  <div class="actions">
	    <%= f.submit %>
	  </div>
	<% end %>
</div>
